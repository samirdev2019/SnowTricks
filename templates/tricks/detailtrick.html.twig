{% extends 'base.html.twig' %}
{% block title %}Tricks-detail{% endblock %}
{% block body %}
  <section class="mb-5 w-40 mx-auto bg">
      <div id="carouselTricksDetail" class="carousel slide col-lg-10 style="height:60%" data-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img class="d-block w-100" src="{{ image.url }}" alt="First slide">
            </div>
            {% for illustration in illustrations %}
            <div class="carousel-item">
              <img class="d-block w-100" src="{{illustration.url}}" alt="{{ illustration.name }}">
            </div>
            <div class="carousel-caption d-none d-md-block">
                <h5>{{ illustration.name }}ss</h5>
                <p>...</p>
              </div>
            {% endfor %}
          </div>
          <a class="carousel-control-prev" href="#carouselTricksDetail" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselTricksDetail" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
  </section>
  <section class="row d-flex flex-row justify-content-around mt-5" id="tricks">
    {% for illustration in illustrations %}
      <div class="card col-xm-2 col-md-2 col-lg-2">
        <img class="card-img-top" src="{{ illustration.url }}" alt="{{ illustration.name }}">
      </div>
    {% endfor %}
    {% for video in videos %}
      <div class="card col-xm-2 col-md-2 col-lg-2">
        <img class="card-img-top" src="{{ video.url }}" alt="{{ video.platform }}">
      </div>
    {% endfor %}
  </section>
  <section class="row">
    <div class="d-block mt-5 mb-5 p-4">
      <p>{{ trick.description }}</p>
    </div>
    <div class="row d-flex bg-info">
      <span>{{trick.createdAt | date('d/m/Y')}}&nbsp;&nbsp;{{trick.createdAt | date('H:i')}}</span>
    </div>
      
    </div>
  </section>
{% endblock %}